<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Your Luxury Stay - RoyalNest</title>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet"/>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;900&family=Inter:wght@300;400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-gold: #D4AF37;
            --deep-gold: #B8860B;
            --royal-blue: #1e3a8a;
            --midnight: #0f172a;
            --pearl: #f8fafc;
            --platinum: #e2e8f0;
            --soft-gray: #64748b;
            --success-green: #10b981;
            --shadow-light: rgba(212, 175, 55, 0.1);
            --shadow-dark: rgba(0, 0, 0, 0.25);
        }

        body {
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            color: var(--midnight);
            background: linear-gradient(135deg, var(--pearl) 0%, #ffffff 100%);
            min-height: 100vh;
        }

        /* Navigation */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1400px;
            margin: 0 auto;
            padding: 1rem 2rem;
        }

        .brand {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary-gold), var(--deep-gold));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-links {
            display: flex;
            gap: 2.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--midnight);
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 0;
            background: linear-gradient(90deg, var(--primary-gold), var(--deep-gold));
            transition: width 0.3s ease;
        }

        .nav-links a:hover::after,
        .nav-links a.active::after {
            width: 100%;
        }

        .nav-links a:hover,
        .nav-links a.active {
            color: var(--primary-gold);
        }

        /* Main Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .container > h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            text-align: center;
            margin-bottom: 3rem;
            background: linear-gradient(135deg, var(--midnight), var(--primary-gold));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }

        .container > h1::after {
            content: '';
            position: absolute;
            bottom: -1rem;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-gold), var(--deep-gold));
        }

        /* Booking Info Section */
        .booking-info {
            background: white;
            border-radius: 24px;
            padding: 3rem;
            margin-bottom: 3rem;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
            position: relative;
            overflow: hidden;
        }

        .booking-info::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-gold), var(--deep-gold));
        }

        .booking-info h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            color: var(--midnight);
        }

        .booking-info p {
            font-size: 1.1rem;
            color: var(--soft-gray);
            margin-bottom: 2rem;
            line-height: 1.8;
        }

        .info-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .info-image:hover {
            transform: scale(1.02);
        }

        /* Booked Rooms Section */
        .booked-rooms {
            background: white;
            border-radius: 24px;
            padding: 3rem;
            margin-bottom: 3rem;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
        }

        .booked-rooms h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: var(--midnight);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .booked-rooms h2::before {
            content: '';
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--primary-gold), var(--deep-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .bookings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }

        .booking-card {
            background: linear-gradient(135deg, var(--pearl), white);
            border-radius: 16px;
            padding: 2rem;
            border: 1px solid rgba(212, 175, 55, 0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .booking-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-gold), var(--deep-gold));
        }

        .booking-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .booking-header h3 {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--midnight);
        }

        .booking-status {
            background: var(--success-green);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .booking-details p {
            margin-bottom: 0.8rem;
            color: var(--soft-gray);
        }

        .booking-details strong {
            color: var(--midnight);
        }

        .no-bookings {
            text-align: center;
            font-size: 1.1rem;
            color: var(--soft-gray);
            font-style: italic;
            padding: 2rem;
        }

        /* Booking Form */
        .booking-form {
            background: white;
            border-radius: 24px;
            padding: 3rem;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
            position: relative;
            overflow: hidden;
        }

        .booking-form::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-gold), var(--deep-gold));
        }

        .booking-form h2 {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: var(--midnight);
            text-align: center;
        }

        #hotel-booking-form {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .form-group.full-width {
            grid-column: 1 / -1;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: var(--midnight);
            font-size: 0.95rem;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            padding: 1rem 1.5rem;
            border: 2px solid var(--platinum);
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
            color: var(--midnight);
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-gold);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 120px;
        }

        .btn-submit {
            grid-column: 1 / -1;
            background: linear-gradient(135deg, var(--primary-gold), var(--deep-gold));
            color: white;
            padding: 1.2rem 3rem;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }

        .btn-submit::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .btn-submit:hover::before {
            left: 100%;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
        }

        /* Footer */
        footer {
            background: var(--midnight);
            color: white;
            text-align: center;
            padding: 2rem;
            margin-top: 4rem;
        }

        footer p {
            font-size: 0.95rem;
            opacity: 0.8;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                gap: 1rem;
            }

            .nav-links {
                gap: 1.5rem;
            }

            .container {
                padding: 1rem;
            }

            .container > h1 {
                font-size: 2.5rem;
            }

            .booking-info,
            .booked-rooms,
            .booking-form {
                padding: 2rem;
            }

            .booking-info h2,
            .booked-rooms h2,
            .booking-form h2 {
                font-size: 2rem;
            }

            #hotel-booking-form {
                grid-template-columns: 1fr;
            }

            .bookings-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Loading Animation */
        .loading {
            position: relative;
            pointer-events: none;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="brand">RoyalNest</div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/book" class="active">Hotels</a>
            <a href="/about">About</a>
            <a href="#contact">Contact</a>
        </div>
    </nav>

    <main class="container">
        <h1>Reserve Your Luxury Experience</h1>

        <section class="booking-info">
            <h2>Curated Luxury Awaits</h2>
            <p>Immerse yourself in unparalleled elegance at our carefully selected portfolio of luxury hotels and resorts. From serene beachfront sanctuaries to sophisticated urban retreats and breathtaking mountain escapes, each property offers an extraordinary experience tailored to the most discerning travelers.</p>
            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80" alt="Luxury City Suite" class="info-image">
        </section>
        
        <!-- Current Bookings Section -->
        <section class="booked-rooms">
  <h2><i class='bx bx-calendar-check'></i> Your Reservations</h2>

  <% if (bookings && bookings.length > 0) { %>
    <div class="bookings-grid">
      <% bookings.forEach(booking => { %>
        <div class="booking-card">
          <div class="booking-header">
            <h3><%= booking.hotelName %></h3>
            <span class="booking-status">Confirmed</span>
          </div>
          <div class="booking-details">
            <p><strong>Room:</strong> <%= booking.roomType %></p>
            <p><strong>Check-in:</strong> <%= booking.checkInDate.toDateString() %></p>
            <p><strong>Check-out:</strong> <%= booking.checkOutDate.toDateString() %></p>
            <p><strong>Guests:</strong> <%= booking.guests %></p>
            <p><strong>Special Requests:</strong> <%= booking.specialRequests || 'None' %></p>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p>No bookings found.</p>
  <% } %>
</section>

        <section class="booking-form">
            <h2>Create Your Perfect Stay</h2>

            <form id="hotel-booking-form" action="/book" method="POST">
                <div class="form-group">
                    <label for="hotel"><i class='bx bx-buildings'></i> Select Hotel:</label>
                    <select id="hotel" name="hotelName" required>
                        <option value="">Choose your destination</option>
                        <option value="royal-palace-resort">Royal Palace Resort</option>
                        <option value="urban-elegance-hotel">Urban Elegance Hotel</option>
                        <option value="coastal-paradise-villa">Coastal Paradise Villa</option>
                        <option value="mountain-retreat-lodge">Mountain Retreat Lodge</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="check-in"><i class='bx bx-calendar'></i> Check-in Date:</label>
                    <input type="date" id="check-in" name="checkInDate" required>
                </div>

                <div class="form-group">
                    <label for="check-out"><i class='bx bx-calendar'></i> Check-out Date:</label>
                    <input type="date" id="check-out" name="checkOutDate" required>
                </div>

                <div class="form-group">
                    <label for="guests"><i class='bx bx-group'></i> Number of Guests:</label>
                    <input type="number" id="guests" name="guests" min="1" max="10" required>
                </div>

                <div class="form-group">
                    <label for="room-type"><i class='bx bx-bed'></i> Room Type:</label>
                    <select id="room-type" name="roomType" required>
                        <option value="">Select room type</option>
                        <option value="deluxe">Deluxe Room</option>
                        <option value="suite">Executive Suite</option>
                        <option value="presidential">Presidential Suite</option>
                        <option value="penthouse">Penthouse</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="name"><i class='bx bx-user'></i> Full Name:</label>
                    <input type="text" id="name" name="fullName" required>
                </div>

                <div class="form-group">
                    <label for="email"><i class='bx bx-envelope'></i> Email Address:</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="phone"><i class='bx bx-phone'></i> Phone Number:</label>
                    <input type="tel" id="phone" name="phone" required>
                </div>

                <div class="form-group full-width">
                    <label for="special-requests"><i class='bx bx-note'></i> Special Requests:</label>
                    <textarea id="special-requests" name="specialRequests" placeholder="Let us know about any special preferences or requirements..."></textarea>
                </div>

                <button type="submit" class="btn-submit">
                    <i class='bx bx-check-circle'></i> Reserve Now
                </button>
            </form>
        </section>
    </main>

    <footer>
        <p>&copy; 2025 RoyalNest. Luxury Redefined.</p>
    </footer>

    <script>
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('check-in').setAttribute('min', today);
        document.getElementById('check-out').setAttribute('min', today);

        // Ensure checkout is after checkin
        document.getElementById('check-in').addEventListener('change', function() {
            const checkInDate = new Date(this.value);
            const checkOutInput = document.getElementById('check-out');
            checkInDate.setDate(checkInDate.getDate() + 1);
            checkOutInput.setAttribute('min', checkInDate.toISOString().split('T')[0]);
        });

        // Form submission with loading state
        document.getElementById('hotel-booking-form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-submit');
            submitBtn.classList.add('loading');
            submitBtn.innerHTML = '<i class="bx bx-loader-alt"></i> Processing...';
            
            // Simulate form processing
            setTimeout(() => {
                submitBtn.classList.remove('loading');
                submitBtn.innerHTML = '<i class="bx bx-check-circle"></i> Reserve Now';
            }, 2000);
        });

        // Smooth animations on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe all sections
        document.querySelectorAll('section').forEach(section => {
            section.style.opacity = '0';
            section.style.transform = 'translateY(30px)';
            section.style.transition = 'all 0.6s ease';
            observer.observe(section);
        });
    </script>
</body>
</html>